        * {
            box-sizing: border-box;
        }

        /* Style the body */
        body {
            background-color: #e6e6e6;
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
        }

        /* Header/logo Title */
        .header {
            height: -40px;
